# Application configuration
FLASK_APP=app_frappe.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your_secret_key_replace_this_in_production

# PostgreSQL database configuration (for migration)
DATABASE_URL=postgresql://hruser:password@postgres:5432/hrdb
POSTGRES_DB=hrdb
POSTGRES_USER=hruser
POSTGRES_PASSWORD=password

# MariaDB database configuration (for Frappe)
DB_HOST=mariadb
DB_NAME=hrms
DB_USER=frappe
DB_PASSWORD=frappe_password
DB_ROOT_PASSWORD=mariadb_root_password
DB_PORT=3306

# Redis configuration (for caching and background jobs)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SOCKETIO_DB=3

# Frappe configuration
FRAPPE_SITE_NAME=hrms.localhost
ADMIN_PASSWORD=admin_password
DEVELOPER_MODE=0

# Migration settings
RUN_MIGRATIONS=true